    "recursive-readdir-async": "^1.1.6"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/node": "^13.11.1",
    "@types/recursive-readdir": "^2.2.0",
    "husky": "^4.2.3",
